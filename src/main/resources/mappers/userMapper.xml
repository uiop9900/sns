<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sns.user.dao.UserDAO">
	<select id="selectUserList" resultType="com.sns.user.model.User">
		SELECT
			`id`
			,`loginId`
			,`password`
			,`name`
			,`email`
			,`introduce`
			,`profileImageUrl`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
	</select>
	
	<select id="existUserId" parameterType="String" resultType="boolean">
		SELECT
			COUNT(1)
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
	</select>
	
	<insert id="insertUser" parameterType="map">
		INSERT INTO `user`
		(
			`loginId`
			,`password`
			,`name`
			,`email`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{loginId}
			,#{password}
			,#{name}
			,#{email}
			,NOW()
			,NOW()
		)
	
	</insert>
	
	<select id="selectUserByLoginId" parameterType="String" resultType="com.sns.user.model.User">
		SELECT
			`id`
			,`loginId`
			,`password`
			,`name`
			,`email`
			,`introduce`
			,`profileImageUrl`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
	</select>
	
	<select id="selectUserById" parameterType="int" resultType="com.sns.user.model.User">
		SELECT
			`id`
			,`loginId`
			,`password`
			,`name`
			,`email`
			,`introduce`
			,`profileImageUrl`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`id` = #{id}
	</select>
	
	
	<select id="selectUserByLoginIdPassword" parameterType="map" resultType="com.sns.user.model.User">
	 	SELECT
			`id`
			,`loginId`
			,`password`
			,`name`
			,`email`
			,`introduce`
			,`profileImageUrl`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
			AND `password` = #{password}
	</select>
	
	<update id="updateProfileIntroduceByLoginId" parameterType="map" >
		UPDATE
			`user`
		SET 
			`introduce` = #{introduce},
			`profileImageUrl` = #{profileImageUrl}
		WHERE
			`loginId` = #{loginId}
	</update>
	
	
</mapper>