<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.sns.post.dao.PostDAO">
	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
			(
				`userId`
				,`imagePath`
				,`content`
				,`createdAt`
				,`updatedAt`
			)
		VALUES
			(
				#{userId}
				,#{imagePath}
				,#{content}
				,NOW()
				,NOW()
			)
		
	</insert>
	
	<select id="selectPostList" resultType="com.sns.post.model.Post">
		SELECT 
				`id`
				,`userId`
				,`imagePath`
				,`content`
				,`createdAt`
				,`updatedAt`
		FROM
			`post`
		ORDER BY `id` DESC;
	</select>
	
	<select id="selectPostListByUserId" parameterType="int" resultType="com.sns.post.model.Post">
		SELECT 
				`id`
				,`userId`
				,`imagePath`
				,`content`
				,`createdAt`
				,`updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
		ORDER BY 
			`id` DESC;
	</select>
	
	<select id="selectPostById" parameterType="int" resultType="com.sns.post.model.Post">
		SELECT 
				`id`
				,`userId`
				,`imagePath`
				,`content`
				,`createdAt`
				,`updatedAt`
		FROM
			`post`
		WHERE
			 `id` = #{postId} 
	</select>
	
</mapper>